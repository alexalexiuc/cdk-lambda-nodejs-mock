{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "include": [".eslintrc.js", "./src/**/*"]
}
